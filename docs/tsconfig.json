{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "lib": [
      "dom",
      "es7"
    ],
    "baseUrl": ".",
    "paths": {
      "@": ["src"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}