{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    //    "module": "commonjs",
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    // "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "site/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "site/**/*"
  ]
}