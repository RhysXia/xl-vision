{
  "compilerOptions": {
    "module": "ESNext",
    "strictNullChecks": true,
    "target": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "site", "typings", "test/wait.ts"]
}
